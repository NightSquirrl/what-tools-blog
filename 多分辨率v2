    <script>
        function findMatchingParen(str, startIndex) {
            let count = 1;
            let i = startIndex + 1;
            
            while (i < str.length && count > 0) {
                if (str[i] === '(') count++;
                else if (str[i] === ')') count--;
                i++;
            }
            
            return count === 0 ? i - 1 : -1;
        }

        function parseIfelse(expression) {
            // ç§»é™¤é¦–å°¾ç©ºæ ¼
            expression = expression.trim();
            
            // æ£€æŸ¥æ˜¯å¦æ˜¯ifelseå‡½æ•°
            if (!expression.startsWith('ifelse(')) {
                return null;
            }
            
            // æ‰¾åˆ°ä¸»è¦çš„æ‹¬å·èŒƒå›´
            const openParen = expression.indexOf('(');
            const closeParen = findMatchingParen(expression, openParen);
            
            if (closeParen === -1) {
                throw new Error('æ‹¬å·ä¸åŒ¹é…');
            }
            
            // æå–æ‹¬å·å†…çš„å†…å®¹
            const content = expression.substring(openParen + 1, closeParen);
            
            // è§£æä¸‰ä¸ªå‚æ•°
            const params = [];
            let currentParam = '';
            let parenCount = 0;
            let inString = false;
            
            for (let i = 0; i < content.length; i++) {
                const char = content[i];
                
                if (char === '"' || char === "'") {
                    inString = !inString;
                    currentParam += char;
                } else if (!inString) {
                    if (char === '(') {
                        parenCount++;
                        currentParam += char;
                    } else if (char === ')') {
                        parenCount--;
                        currentParam += char;
                    } else if (char === ',' && parenCount === 0) {
                        params.push(currentParam.trim());
                        currentParam = '';
                        continue;
                    } else {
                        currentParam += char;
                    }
                } else {
                    currentParam += char;
                }
            }
            
            if (currentParam.trim()) {
                params.push(currentParam.trim());
            }
            
            if (params.length !== 3) {
                throw new Error(`ifelseå‡½æ•°éœ€è¦3ä¸ªå‚æ•°ï¼Œä½†æ‰¾åˆ°äº†${params.length}ä¸ª`);
            }
            
            return {
                condition: params[0],
                trueValue: params[1],
                falseValue: params[2]
            };
        }

        function processResultExpression(expr, coefficient) {
            expr = expr.trim();
            
            console.log(`å¤„ç†è¡¨è¾¾å¼: "${expr}", ç³»æ•°: ${coefficient}`);
            
            // æ£€æŸ¥æ˜¯å¦æ˜¯åµŒå¥—çš„ ifelse è¡¨è¾¾å¼ - è¿™ä¸ªæ£€æŸ¥è¦åœ¨ actual_w æ£€æŸ¥ä¹‹å‰ï¼
            if (expr.startsWith('ifelse(')) {
                console.log(`æ£€æµ‹åˆ°åµŒå¥—ifelse: ${expr}`);
                return processNestedIfelse(expr, coefficient);
            }
            
            // å¦‚æœåŒ…å« actual_wï¼Œä¸è¿›è¡Œå¤„ç†ï¼ˆåªå¯¹éifelseè¡¨è¾¾å¼æ£€æŸ¥ï¼‰
            if (expr.includes('actual_w')) {
                console.log(`åŒ…å«actual_wï¼Œä¸å¤„ç†: ${expr}`);
                return expr;
            }
            
            // å¦‚æœæ˜¯ç®€å•çš„æ•°å­—æˆ–å˜é‡ï¼Œç›´æ¥ä¹˜ä»¥ç³»æ•°
            if (/^[a-zA-Z_]\w*$/.test(expr) || /^\d+(\.\d+)?$/.test(expr)) {
                const result = `${expr}*${coefficient}`;
                console.log(`ç®€å•è¡¨è¾¾å¼å¤„ç†: ${expr} -> ${result}`);
                return result;
            }
            
            // å¯¹äºå¤æ‚è¡¨è¾¾å¼ï¼Œç”¨æ‹¬å·åŒ…å›´åä¹˜ä»¥ç³»æ•°
            const result = `(${expr})*${coefficient}`;
            console.log(`å¤æ‚è¡¨è¾¾å¼å¤„ç†: ${expr} -> ${result}`);
            return result;
        }

        function processNestedIfelse(expression, coefficient) {
            console.log(`å¤„ç†åµŒå¥—ifelse: ${expression}`);
            try {
                const parsed = parseIfelse(expression);
                if (!parsed) {
                    console.log(`è§£æå¤±è´¥ï¼Œå½“ä½œæ™®é€šè¡¨è¾¾å¼å¤„ç†`);
                    // å¦‚æœè§£æå¤±è´¥ï¼Œå½“ä½œæ™®é€šè¡¨è¾¾å¼å¤„ç†
                    if (expression.includes('actual_w')) {
                        return expression;
                    }
                    return `(${expression})*${coefficient}`;
                }
                
                console.log(`è§£ææˆåŠŸ:`, parsed);
                
                // é€’å½’å¤„ç†åµŒå¥—çš„ ifelse - è¿™é‡Œå…³é”®æ˜¯è¦é€’å½’å¤„ç†æ‰€æœ‰åˆ†æ”¯
                const processedTrueValue = processResultExpression(parsed.trueValue, coefficient);
                const processedFalseValue = processResultExpression(parsed.falseValue, coefficient);
                
                const result = `ifelse(${parsed.condition}, ${processedTrueValue}, ${processedFalseValue})`;
                console.log(`åµŒå¥—å¤„ç†ç»“æœ: ${result}`);
                return result;
            } catch (error) {
                console.log(`å¤„ç†åµŒå¥—ifelseå‡ºé”™: ${error.message}`);
                // è§£æå¤±è´¥æ—¶å½“ä½œæ™®é€šè¡¨è¾¾å¼å¤„ç†
                if (expression.includes('actual_w')) {
                    return expression;
                }
                return `(${expression})*${coefficient}`;
            }
        }

        function processExpression() {
            const expressionInput = document.getElementById('expression').value;
            const coefficient = parseFloat(document.getElementById('coefficient').value) || 2;
            const resultDiv = document.getElementById('result');
            
            if (!expressionInput.trim()) {
                resultDiv.innerHTML = '<div class="error">è¯·è¾“å…¥è¡¨è¾¾å¼</div>';
                return;
            }
            
            try {
                const parsed = parseIfelse(expressionInput);
                
                if (!parsed) {
                    resultDiv.innerHTML = '<div class="error">ä¸æ˜¯æœ‰æ•ˆçš„ifelseè¡¨è¾¾å¼</div>';
                    return;
                }
                
                // å¤„ç† trueValue å’Œ falseValueï¼ˆæ”¯æŒåµŒå¥—ï¼‰
                const processedTrueValue = processResultExpression(parsed.trueValue, coefficient);
                const processedFalseValue = processResultExpression(parsed.falseValue, coefficient);
                
                // é‡æ–°æ„å»ºè¡¨è¾¾å¼
                const newExpression = `ifelse(${parsed.condition}, ${processedTrueValue}, ${processedFalseValue})`;
                
                // æ„å»ºè¯¦ç»†çš„è§£ææ ‘æ˜¾ç¤º
                const parseTree = buildParseTree(parsed, coefficient);
                
                resultDiv.innerHTML = `
                    <div class="result">
                        <h3>ğŸ” è§£æç»“æœï¼š</h3>
                        ${parseTree}
                        
                        <h3>âœ¨ æœ€ç»ˆè¡¨è¾¾å¼ï¼š</h3>
                        <div class="expression" style="background: #d4edda; border-left-color: #28a745;">
                            ${newExpression}
                        </div>
                    </div>
                `;
                
            } catch (error) {
                resultDiv.innerHTML = `<div class="error">é”™è¯¯: ${error.message}</div>`;
            }
        }

        // æ·»åŠ ä¸€äº›ç¤ºä¾‹
        function loadExample(example) {
            document.getElementById('expression').value = example;
            processExpression();
        }

        function buildParseTree(parsed, coefficient, level = 0) {
            const indent = '&nbsp;'.repeat(level * 4);
            let html = `
                <div style="margin-left: ${level * 20}px; border-left: ${level > 0 ? '2px solid #ddd' : 'none'}; padding-left: 10px;">
                    <p><strong>${indent}æ¡ä»¶ï¼š</strong> <code>${parsed.condition}</code></p>
            `;
            
            // å¤„ç†çœŸå€¼åˆ†æ”¯
            html += `<p><strong>${indent}çœŸå€¼ç»“æœï¼š</strong></p>`;
            if (parsed.trueValue.startsWith('ifelse(')) {
                try {
                    const nestedParsed = parseIfelse(parsed.trueValue);
                    if (nestedParsed) {
                        html += `<div class="expression">åŸå§‹: ${parsed.trueValue}</div>`;
                        html += buildParseTree(nestedParsed, coefficient, level + 1);
                    } else {
                        html += `<div class="expression">åŸå§‹: ${parsed.trueValue}</div>`;
                        html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.trueValue, coefficient)}</div>`;
                    }
                } catch (e) {
                    html += `<div class="expression">åŸå§‹: ${parsed.trueValue}</div>`;
                    html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.trueValue, coefficient)}</div>`;
                }
            } else {
                html += `<div class="expression">åŸå§‹: ${parsed.trueValue}</div>`;
                html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.trueValue, coefficient)}</div>`;
            }
            
            // å¤„ç†å‡å€¼åˆ†æ”¯
            html += `<p><strong>${indent}å‡å€¼ç»“æœï¼š</strong></p>`;
            if (parsed.falseValue.startsWith('ifelse(')) {
                try {
                    const nestedParsed = parseIfelse(parsed.falseValue);
                    if (nestedParsed) {
                        html += `<div class="expression">åŸå§‹: ${parsed.falseValue}</div>`;
                        html += buildParseTree(nestedParsed, coefficient, level + 1);
                    } else {
                        html += `<div class="expression">åŸå§‹: ${parsed.falseValue}</div>`;
                        html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.falseValue, coefficient)}</div>`;
                    }
                } catch (e) {
                    html += `<div class="expression">åŸå§‹: ${parsed.falseValue}</div>`;
                    html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.falseValue, coefficient)}</div>`;
                }
            } else {
                html += `<div class="expression">åŸå§‹: ${parsed.falseValue}</div>`;
                html += `<div class="expression">å¤„ç†å: ${processResultExpression(parsed.falseValue, coefficient)}</div>`;
            }
            
            html += '</div>';
            return html;
        }
    </script>
